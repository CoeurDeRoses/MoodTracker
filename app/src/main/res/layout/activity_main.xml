<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#fff9ec4f">

                <ImageButton
                    android:id="@+id/buttonSuperHappy"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="220dp"
                    android:layout_marginBottom="200dp"
                    android:background="@drawable/smiley_super_happy"
                    android:contentDescription="@string/StringSuperHappy" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffb8e986">

                <ImageButton
                    android:id="@+id/buttonHappy"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="220dp"
                    android:layout_marginBottom="200dp"
                    android:background="@drawable/smiley_happy"
                    android:contentDescription="@string/StringHappy" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#a5468ad9">

                <ImageButton
                    android:id="@+id/buttonNormal"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="220dp"
                    android:layout_marginBottom="200dp"
                    android:background="@drawable/smiley_normal"
                    android:contentDescription="@string/StringNormal" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff9b9b9b">

                <ImageButton
                    android:id="@+id/buttonDisappointed"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="220dp"
                    android:layout_marginBottom="200dp"
                    android:background="@drawable/smiley_disappointed"
                    android:contentDescription="@string/StringDisappointed" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffde3c50">

                <ImageButton
                    android:id="@+id/buttonSad"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="220dp"
                    android:layout_marginBottom="200dp"
                    android:background="@drawable/smiley_sad"
                    android:contentDescription="@string/StringSad" />


            </FrameLayout>

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/ShareMood"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/share_mood"
        android:contentDescription="@string/Sharebutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/piechart_button"
        app:layout_constraintStart_toEndOf="@+id/AddComment" />

    <Button
        android:id="@+id/piechart_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/piechart"
        app:layout_constraintBottom_toBottomOf="@+id/ShareMood"
        app:layout_constraintEnd_toStartOf="@+id/GoHistory"
        app:layout_constraintStart_toEndOf="@+id/ShareMood"
        app:layout_constraintTop_toTopOf="@+id/ShareMood" />

    <ImageButton

        android:id="@+id/GoHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_history_black"
        android:contentDescription="@string/StringForMoodHistory"
        app:layout_constraintBottom_toBottomOf="@+id/piechart_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/piechart_button"
        app:layout_constraintTop_toTopOf="@+id/piechart_button" />

    <ImageButton
        android:id="@+id/AddComment"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_note_add_black"
        android:contentDescription="@string/StringForAddCommentButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ShareMood"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>